
<div class = "row">
	<div class = "col-sm-7 col-md-4">   
		<div class = "caption" style ="text-align:center;">
			<h1><%= @author.name %><br></h1><br/>			       
			<%= image_tag(@author.image.url,size: "300x350")%><br><br>				
		</div>
  </div>
	<div class = "caption" style ="text-align:center;">
		<h1>Description </h1>
	</div>
  <div class = "col-md-7 col-md-offset-1">    
    <div class = "jumbotron">         
      <%= @author.description %>            
    </div>
  </div>
</div>

<br/>
        
<div class = "row">
  <div class = "caption" style ="text-align:center;">
  	<h1>Books from this author</h1>
		<% @author.books.each do |book|%>
			<div class = "col-sm-6 col-md-4">
				<div class = "thumbnail thumb-box">
					<h2 style = "text-align:center;"><%=link_to book.title, book %></h2>
					<div class = "caption" style ="text-align:center;">
						<%= link_to image_tag(book.image.url,size: "250x300"), book%>
					</div>
				</div>
			</div>
    <%end%>
	</div>
</div>