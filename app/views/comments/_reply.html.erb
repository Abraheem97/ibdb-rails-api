<div id="comment_<%= reply.id %>">
 <h3 ><%= image_tag(reply.user.avatar.url,size: "59x59")%> <strong><%= reply.user.username %> replied<strong></h3>
            <p><%= reply.body %><br></p>
            <%= time_ago_in_words(reply.created_at) %> ago
              <%if can? :delete, reply %>                
                <%= link_to "Delete", book_comment_path(@book, reply) , method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-primary btn-sm", remote: true%> 
              <% end %> 
              </div>
              